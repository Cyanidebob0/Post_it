<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Feed</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-gray-900 text-white min-h-screen px-4 py-6">
    <div class="max-w-3xl mx-auto">
      <!-- Top Buttons -->
      <div class="flex justify-between items-center mb-6">
        <a
          href="/profile"
          class="bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded font-medium transition"
          >Go to Profile</a
        >
        <a
          href="/logout"
          class="bg-red-600 hover:bg-red-700 px-4 py-2 rounded font-medium transition"
          >Logout</a
        >
      </div>

      <!-- Heading -->
      <h1 class="text-3xl font-bold text-center mb-6">All Posts</h1>

      <%post.forEach(ele=>{%>
      <div class="bg-gray-800 rounded-lg p-4 mb-4 shadow">
        <p class="text-sm text-gray-400 mb-2">
          Author:
          <span class="text-white font-semibold"><%=ele.user.name%></span>
        </p>
        <h2 class="text-xl font-semibold mb-2"><%=ele.title%></h2>
        <p class="text-gray-300"><%=ele.content%></p>
        <button id="likeBtn" class="rounded-lg mt-4 text-xl">ü§ç</button>

        <script>
          const btn = document.getElementById("likeBtn");
          btn.addEventListener("click", () => {
            btn.textContent = btn.textContent ===  "‚ù§Ô∏è" ? "ü§ç" : "‚ù§Ô∏è"; 
          });
        </script>
      </div>
      <%})%>
    </div>
  </body>
</html>
